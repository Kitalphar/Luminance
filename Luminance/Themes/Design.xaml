<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=mscorlib">

    <!--This file is for the App's visual design, like Grids, Stackpanels, etc...-->

    <System:Decimal x:Key="BaseAppCornerRadius">12</System:Decimal>
    
    <!--Window Styles-->
    <Style x:Key="BaseWindowStlye" TargetType="Window">
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>


    <Style x:Key="StartupWindowDesignStyle" TargetType="Window" BasedOn="{StaticResource BaseWindowStlye}">
        <Setter Property="Height" Value="400"/>
        <Setter Property="Width" Value="500"/>
        <Setter Property="Title" Value="StartupWindow"/>
    </Style>

    <Style x:Key="MainWindowStyleDesignStyle" TargetType="Window" BasedOn="{StaticResource BaseWindowStlye}">
        <Setter Property="Height" Value="720"/>
        <Setter Property="Width" Value="1200"/>
        <Setter Property="Title" Value="Luminance"/>
    </Style>
    
    <!--Border Style-->
    <Style x:Key="PrimaryBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource PrimaryAppBgColor}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryAppBorderColor}"/>
        <Setter Property="BorderThickness" Value="0.5"/>
    </Style>

    <Style x:Key="SecondaryBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource SecondaryAppBgColor}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryAppBorderColor}"/>
        <Setter Property="BorderThickness" Value="0.5"/>
    </Style>

    <Style x:Key="StartupWindowBorderStyle" TargetType="Border" BasedOn="{StaticResource PrimaryBorderStyle}">
        <Setter Property="CornerRadius" Value="12"/>
    </Style>

    <Style x:Key="MainWindowOuterBorderStyle" TargetType="Border" BasedOn="{StaticResource SecondaryBorderStyle}">
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Grid.Row" Value="0"/>
        <Setter Property="Grid.Column" Value="0"/>
        <Setter Property="Grid.RowSpan" Value="999"/>
        <Setter Property="Grid.ColumnSpan" Value="999"/>
    </Style>

    <Style x:Key="MainWindowHeaderBorderStyle" TargetType="Border" BasedOn="{StaticResource SecondaryBorderStyle}">
        <Setter Property="CornerRadius" Value="0,12,0,0"/>
        <Setter Property="Grid.Row" Value="0"/>
        <Setter Property="Grid.Column" Value="1"/>
        <Setter Property="Grid.ColumnSpan" Value="999"/>
    </Style>

    <Style x:Key="MainWindowInnerBorderStyle" TargetType="Border" BasedOn="{StaticResource PrimaryBorderStyle}">
        <Setter Property="CornerRadius" Value="0,0,12,0"/>
        <Setter Property="Grid.Row" Value="1"/>
        <Setter Property="Grid.Column" Value="1"/>
    </Style>

</ResourceDictionary>