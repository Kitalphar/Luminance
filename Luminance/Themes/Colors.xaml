<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Centralised file housing all base color options-->
    <!--Brushes are housed in the respective theme files--> 
    
    <!-- Base colors -->
    <Color x:Key="White-200">white</Color>
    <Color x:Key="White-300">#FFFDF6</Color>
    
    <Color x:Key="Grey-200">#E6F0F7</Color>
    <Color x:Key="Grey-300">#9AA8B7</Color>

    <Color x:Key="LightBlue-200">#2D8EFF</Color>

    <Color x:Key="DarkBlue-200">#475b70</Color>
    <Color x:Key="DarkBlue-300">#34699A</Color>
    <Color x:Key="DarkBlue-800">#040D18</Color>
    <Color x:Key="DarkBlue-900">#00080E</Color>

    <Color x:Key="Red-400">#FF3C3C</Color>

    <Color x:Key="Green-300">#08CB00</Color>


</ResourceDictionary> 