<UserControl x:Class="Luminance.Controls.RecoveryKeyTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Luminance.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="500">

    
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Grid.ColumnSpan="999" Panel.ZIndex="-1"/>

        <!-- The actual textbox -->
        <TextBox
            Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Foreground="{DynamicResource SecondaryTextColor}"
            IsReadOnly="True"
            BorderThickness="0"
            Padding="5"
            VerticalContentAlignment="Center"
            FontSize="{DynamicResource FontSize-Large}"
            TextAlignment="Center"
            Background="Transparent"/>

        <!-- Copy button -->
        <Button x:Name="CopyButton"
                Grid.Column="1"
                Content="📋"
                FontFamily="Segoe UI Symbol"
                FontSize="{DynamicResource FontSize-Large}"
                Width="40"
                ToolTip="Copy to clipboard"
                Click="CopyButton_Click"
                Background="Transparent"
                Foreground="{DynamicResource SecondaryTextColor}"
                BorderThickness="0"
                Cursor="Hand"/>

    </Grid>
</UserControl>
