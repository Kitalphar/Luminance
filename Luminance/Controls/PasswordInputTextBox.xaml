<UserControl x:Class="Luminance.Controls.PasswordInputTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Luminance.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">
    <Grid>
        <Border Style="{DynamicResource LoginWindowTextBoxBorderStyle}"/>

        <TextBox
            x:Name="passwordInputTextBox"
            Style="{DynamicResource LoginWindowTextBoxStyle}"
            Width="200"
            Text="{Binding Text,
                RelativeSource={RelativeSource AncestorType=UserControl},
                Mode=TwoWay,
                UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock
            x:Name="passwordInputPlaceholder"
            Style="{DynamicResource LoginWindowTextBoxTextBlockStyle}"
            Text="{Binding PlaceHolder, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
    </Grid>
</UserControl>
