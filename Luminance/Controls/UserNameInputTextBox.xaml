<UserControl x:Class="Luminance.Controls.UserNameInputTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Luminance.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">
    <Grid>
        <Border 
            CornerRadius="5" 
            BorderThickness="1"
            Background="White"
            Padding="10,5,5,10"
            Panel.ZIndex="-1"
            />
        
        <TextBox 
            Width="200"
            x:Name="userNameInputTextBox" 
            VerticalContentAlignment="Center"
            Background="Transparent"
            BorderBrush="Transparent"
            FontSize="14"
            Text="{Binding Text,
                RelativeSource={RelativeSource AncestorType=UserControl},
                Mode=TwoWay,
                UpdateSourceTrigger=PropertyChanged}"
            />
        
        <TextBlock
            x:Name="userNameInputPlaceholder"
            Text="{Binding PlaceHolder, RelativeSource={RelativeSource AncestorType=UserControl}}"
            FontSize="14"
            VerticalAlignment="Center"
            Margin="5,0,0,0"
            Foreground="DarkGray"
            Panel.ZIndex="-1"
            />
    </Grid>
</UserControl>
