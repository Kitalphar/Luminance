<UserControl x:Class="Luminance.Views.TopCategoriesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:Luminance.Views"
             xmlns:vm="clr-namespace:Luminance.ViewModels" d:DataContext="{d:DesignInstance Type=vm:TopCategoriesViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="480">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.75*"/>
        </Grid.RowDefinitions>

        <Border Style="{DynamicResource DashboardEmbeddedViewsBorderStyle}"/>

        <TextBlock
            Text="Top Categories"
            Foreground="{DynamicResource SecondaryTextColor}"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <TextBlock
                Text="{Binding FirstCategory.category_name}"
                Style="{DynamicResource TopCategoryNameTextBoxStyle}"
                Grid.Column="0"/>
            <TextBlock
                Text="{Binding FirstCategory.balance}"
                Foreground="{Binding FirstCategoryBrush}"
                Style="{DynamicResource TopCategoryBalanceTextBoxStyle}"
                Grid.Column="1"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <TextBlock
                Text="{Binding SecondCategory.category_name}"
                Style="{DynamicResource TopCategoryNameTextBoxStyle}"
                Grid.Column="0"/>
            <TextBlock
                Text="{Binding SecondCategory.balance}"
                Foreground="{Binding SecondCategoryBrush}"
                Style="{DynamicResource TopCategoryBalanceTextBoxStyle}"
                Grid.Column="1"/>
        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <TextBlock
                Text="{Binding ThirdCategory.category_name}"
                Style="{DynamicResource TopCategoryNameTextBoxStyle}"
                Grid.Column="0"/>
            <TextBlock
                Text="{Binding ThirdCategory.balance}"
                Foreground="{Binding ThirdCategoryBrush}"
                Style="{DynamicResource TopCategoryBalanceTextBoxStyle}"
                Grid.Column="1"/>
        </Grid>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <TextBlock
                Text="{Binding FourthCategory.category_name}"
                Style="{DynamicResource TopCategoryNameTextBoxStyle}"
                Grid.Column="0"/>
            <TextBlock
                Text="{Binding FourthCategory.balance}"
                Foreground="{Binding FourthCategoryBrush}"
                Style="{DynamicResource TopCategoryBalanceTextBoxStyle}"
                Grid.Column="1"/>
        </Grid>

        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <TextBlock
                Text="{Binding FifthCategory.category_name}"
                Style="{DynamicResource TopCategoryNameTextBoxStyle}"
                Grid.Column="0"/>
            <TextBlock
                Text="{Binding FifthCategory.balance}"
                Foreground="{Binding FifthCategoryBrush}"
                Style="{DynamicResource TopCategoryBalanceTextBoxStyle}"
                Grid.Column="1"/>
        </Grid>
    </Grid>
</UserControl>
