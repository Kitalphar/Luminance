<UserControl x:Class="Luminance.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Luminance.Views"
             xmlns:vm="clr-namespace:Luminance.ViewModels" d:DataContext="{d:DesignInstance Type=vm:LoginViewModel}"
             xmlns:Controls="clr-namespace:Luminance.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="360" d:DesignWidth="500">
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>


        <Controls:UserNameInputTextBox
            Grid.Row="1"
            Height="40"
            Width="200"
            PlaceHolder="John Smith"
            Text="{Binding UserName, Mode=TwoWay, 
               UpdateSourceTrigger=PropertyChanged,
               PresentationTraceSources.TraceLevel=High}"
            />

        <Controls:PasswordInputTextBox
            Grid.Row="3"
            Height="40"
            Width="200"
            PlaceHolder="Password"
            Text="{Binding Password, Mode=TwoWay,
            UpdateSourceTrigger=PropertyChanged,
            PresentationTraceSources.TraceLevel=High}"
            />

        <Button 
            Content="Login"
            Grid.Row="5"
            Height="20"
            Width="80"
            VerticalAlignment="Top"
            Command="{Binding HandleLoginCommand}"
            />

        <Button 
            Content="Register"
            Grid.Row="6"
            Height="20"
            Width="80"
            VerticalAlignment="Bottom"
            Command="{Binding HandleRegistrationCommand}"
            />
    </Grid>
</UserControl>
