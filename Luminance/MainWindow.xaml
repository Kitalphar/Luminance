<Window x:Class="Luminance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Luminance"
        xmlns:views="clr-namespace:Luminance.Views"
        xmlns:vm="clr-namespace:Luminance.ViewModels" d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="720"
        Width="1200"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        >
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:HomeViewModel}">
            <views:HomeView />
        </DataTemplate>
    </Window.Resources>    
    
    
    
    <Grid>
        <Border Background="#212529" CornerRadius="12"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <Button
                Content="X"
                Command="{Binding CloseButtonCommand}"
                Width="18"
                Height="18"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Margin="0,0,30,0"
                />
            <Button
                Content="O"
                Command="{Binding MaximizeWindowCommand}"
                Width="18"
                Height="18"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Margin="0,0,60,0"
                />
            <Button
                Content="_"
                Command="{Binding MinimizeWindowCommand}"
                Width="18"
                Height="18"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Margin="0,0,90,0"
                />

            <StackPanel Grid.Row="1">
                <RadioButton
                    Content="Home"
                    Height="50"
                    Foreground="White"
                    FontSize="14"
                    Style="{StaticResource MenuButtonTheme}"
                    />

                <RadioButton
                    Content="Discovery"
                    Height="50"
                    Foreground="White"
                    FontSize="14"
                    Style="{StaticResource MenuButtonTheme}"
                    />  
            </StackPanel>

            <ContentControl
                Grid.Row="1"
                Grid.Column="1"
                Margin="10"
                />

        </Grid>
    </Grid>
</Window>
