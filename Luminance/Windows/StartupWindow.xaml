<Window x:Class="Luminance.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Luminance"
        xmlns:views="clr-namespace:Luminance.Views"
        xmlns:vm="clr-namespace:Luminance.ViewModels" d:DataContext="{d:DesignInstance Type=vm:StartupWindowViewModel}"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource StartupWindowDesignStyle}"
        >

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginView />
        </DataTemplate>
    </Window.Resources>


    <Grid>
        <Border Style="{DynamicResource StartupWindowBorderStyle}"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Style="{DynamicResource CloseWindowControlButtonStyle}"
                    HorizontalAlignment="Right"
                    Margin="0,0,20,0"
                    Command="{Binding CloseButtonCommand}"/>

            <TextBlock Style="{DynamicResource LoginWindowTitleStyle}" Grid.Row="1"/>

            <ContentControl Content="{Binding CurrentViewModel}" Grid.Row="2"/>
        </Grid>
        
    </Grid>
</Window>
