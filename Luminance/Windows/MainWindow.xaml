<Window x:Class="Luminance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Luminance"
        xmlns:views="clr-namespace:Luminance.Views"
        xmlns:vm="clr-namespace:Luminance.ViewModels" d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource MainWindowStyleDesignStyle}">
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TransactionsViewModel}">
            <views:TransactionsView />
        </DataTemplate>
    </Window.Resources>

    <Grid >
        <Grid Panel.ZIndex="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            
            <!--Apparently i need to color borders and not controls if i want it to behave like i want it to.-->
            
            <!--Outer border radius-->
            <Border Style="{DynamicResource MainWindowOuterBorderStyle}"/>
            <!--Header border radius-->
            <Border Style="{DynamicResource MainWindowHeaderBorderStyle}"/>
            <!--Inner border radius-->
            <Border Style="{DynamicResource MainWindowInnerBorderStyle}"/>
            
            <Button
                Style="{DynamicResource CloseWindowControlButtonStyle}"
                Command="{Binding CloseButtonCommand}"
                IsEnabled="{Binding IsSetupComplete}"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Margin="0,0,30,0"
                />
            <Button
                Style="{DynamicResource MaximizeWindowControlButtonStyle}"
                Command="{Binding MaximizeWindowCommand}"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Margin="0,0,60,0"
                />
            <Button
                Style="{DynamicResource MinimizeWindowControlButtonStyle}"
                Command="{Binding MinimizeWindowCommand}"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Margin="0,0,90,0"
                />

            <StackPanel Grid.Row="1" Grid.Column="0" >

                <RadioButton
                    Content="{Binding DashboardMenuItem}"
                    Style="{StaticResource MenuButtonTheme}"
                    IsEnabled="{Binding IsSetupComplete}"/>

                <RadioButton
                    Content="{Binding TransactionsMenuItem}"
                    Style="{StaticResource MenuButtonTheme}"
                    IsEnabled="{Binding IsSetupComplete}"/>
            </StackPanel>

            <ContentControl
                Content="{Binding CurrentViewModel}"
                Grid.Row="1"
                Grid.Column="1"
                />

        </Grid>
    </Grid>
</Window>